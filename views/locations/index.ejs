<%- include('../partials/header') %>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Country</th>
      <th>Region</th>
      <th>Sub Region</th>
    </tr>
  </thead>
  <tbody>
    <% locations.forEach(function(l) { %>
      <tr>
        <td><%= l.country %></td>
        <td><%= l.region %></td>
        <td><%= l.subRegion %></td>
        <td><a href="/locations/<%= l._id %>">EXPLORE</a></td>
        <% if (user && user._id.equals(l.user)) { %>
          <td>
            <form action="/locations/<%= l._id %>?_method=DELETE" method="POST">
              <button type="submit">REMOVE</button>
            </form>
          </td>
          <% } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/locations/new">ADD A REGION!</a>
  </table>
    
<%- include('../partials/footer') %>