<%- include('../partials/header') %>

<table>
  <thead>
    <tr>
      <th>Vintage</th>
      <th>Location</th>
      <th>Producer</th>
      <th>Variety</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% wines.forEach(function(w) { %>
      <tr>
        <td><%= w.vintage %></td>
        <% if (w.location) { %>
        <td><%= w.location.country %></td>
        <% } else { %>
          <td></td>
        <% } %>
        <td><%= w.producer %></td>
        <td><%= w.variety %></td>
        <td><%= w.price %></td>
        <td><a href="/wines/<%= w._id %>">EXPLORE</a></td>
        <% if (user) { %>
          <td>
            <form action="/wines/<%= w._id %>?_method=DELETE" method="POST">
              <button type="submit">REMOVE</button>
            </form>
          </td>
        <% } %>
      </tr>
      <% }); %>
    </tbody>
  </table>
    <a href="/wines/new">ADD SOME JUICE!</a>
    <a href="/locations">LOCATION GUIDE</a>
    
    <%- include('../partials/footer') %>